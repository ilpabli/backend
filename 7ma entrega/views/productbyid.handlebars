<header>
  <nav class="p-3 mb-2 bg-primary text-white">
    <div class="container-fluid">
      <p class="fs-1 text-center">
        Detalle de producto
      </p>
    </div>
  </nav>
</header>
<main>
  <section>
    <div class="container-fluid text-center mt-5">
        <div class="row justify-content-md-center">
          <div class="card mt-3" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">Su estado es:
                {{this.description}}
                <br />
                Precio:
                {{this.price}}
                <br />
                Codigo:
                {{this.code}}
                <br />
                Stock:
                {{this.stock}}
                <br />
                Categoria:
                {{this.category}}
                <br />
                ID:
                {{this._id}}</p>
                 <form action="/api/carts/6483ddb28d17666addf9f5dc/products/{{this._id}}" method=post name="form{{this._id}}">
                 <button type="submit" class="btn btn-primary">Agregar</button>
                 </form> 
            </div>
          </div>
        </div>
    </div>
    <div class="container-fluid text-center mt-5">
      <div class="row justify-content-md-center">
			<nav class="col-md-auto">
				<ul class="pagination">
					<li class="page-item active" aria-current="page">
					<a class="page-link" href="/products">Volver</a>
				</ul>
			</nav>
      </div>
		</div>

  </section>
</main>